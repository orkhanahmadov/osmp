{
    "name": "orkhanahmadov/osmp",
    "description": "OSMP client for PHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Orkhan Ahmadov",
            "email": "ahmadov90@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "ext-simplexml": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.1"
    },
    "autoload": {
        "psr-4": {
            "Orkhanahmadov\\OSMP\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Orkhanahmadov\\OSMP\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
